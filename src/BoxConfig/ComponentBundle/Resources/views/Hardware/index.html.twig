{% extends("::base.html.twig") %}

{% block title%}Display hardware{% endblock %}

{% block body %}

<h2>Hardware list</h2>
<p>This is a list of all the hardware that is currently in use on the site</p>
<div class="container well">

    <table class="table records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('hardware_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.name }}</td>
                <td>{{ entity.description }}</td>
                <td>
                    <a class="btn btn-mini btn-success"  href="{{ path('hardware_show', { 'id': entity.id }) }}">show</a>
                    <a class="btn btn-mini btn-success"  href="{{ path('hardware_edit', { 'id': entity.id }) }}">edit</a>
                    <a class="btn btn-mini btn-danger" href="{{ path('hardware_delete', { 'id': entity.id }) }}">delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


    <p>
        <a class="btn btn-mini btn-success" href="{{ path('hardware_new') }}">Create a new entry</a>
    </p>

</div>

{% endblock %}