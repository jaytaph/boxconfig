{% extends("::base.html.twig") %}

{% block body %}

<span class="pull-left"><img src="{{ entity.os.webthumbpath(260,180) }}"></span>
<h1>{{ entity }}</h1>

<table class="table">
    <tbody>
        <tr>
            <th>Operating system</th>
            <td>{{ entity.os }}</td>
        </tr>
        <tr>
            <th>Distribution</th>
            <td>{{ entity.distribution }}</td>
        </tr>
        <tr>
            <th>Version</th>
            <td>{{ entity.version }}</td>
        </tr>
        <tr>
            <th>Codename</th>
            <td>{{ entity.codename }}</td>
        </tr>

    </tbody>
</table>

